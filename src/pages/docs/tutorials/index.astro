---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const tutorials = await getCollection('tutorials');
const sortedTutorials = tutorials.sort((a, b) => a.data.order - b.data.order);

const difficultyColors: Record<string, string> = {
  beginner: 'bg-green-100 text-green-800',
  intermediate: 'bg-yellow-100 text-yellow-800',
  advanced: 'bg-red-100 text-red-800',
};

const classifierColors: Record<string, string> = {
  bayes: 'bg-blue-100 text-blue-800',
  lsi: 'bg-purple-100 text-purple-800',
  knn: 'bg-orange-100 text-orange-800',
  tfidf: 'bg-cyan-100 text-cyan-800',
  logisticregression: 'bg-emerald-100 text-emerald-800',
};
---

<BaseLayout title="Tutorials - Ruby Classifier">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <a href="/docs" class="text-sm text-gray-500 hover:text-ruby transition-colors">
        ‚Üê Back to Docs
      </a>
    </div>

    <h1 class="text-4xl font-bold text-gray-900 mb-4">Tutorials</h1>
    <p class="text-xl text-gray-600 mb-8">
      Step-by-step guides to build real projects with the classifier gem.
    </p>

    <div class="space-y-6">
      {sortedTutorials.map((tutorial, index) => (
        <a
          href={`/docs/tutorials/${tutorial.slug}`}
          class="block p-6 bg-white border border-gray-200 rounded-lg hover:border-ruby hover:shadow-md transition-all group"
        >
          <div class="flex items-start gap-4">
            <span class="flex-shrink-0 w-8 h-8 bg-ruby/10 text-ruby rounded-full flex items-center justify-center font-semibold text-sm">
              {index + 1}
            </span>
            <div class="flex-1">
              <div class="flex flex-wrap items-center gap-2 mb-2">
                <h2 class="text-xl font-semibold text-gray-900 group-hover:text-ruby transition-colors">
                  {tutorial.data.title}
                </h2>
                <span class={`text-xs font-medium px-2 py-0.5 rounded ${difficultyColors[tutorial.data.difficulty]}`}>
                  {tutorial.data.difficulty}
                </span>
                {tutorial.data.classifiers?.map((classifier: string) => (
                  <span class={`text-xs font-medium px-2 py-0.5 rounded ${classifierColors[classifier]}`}>
                    {classifier.toUpperCase()}
                  </span>
                ))}
              </div>
              <p class="text-gray-600">{tutorial.data.description}</p>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-ruby transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
